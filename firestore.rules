rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to create their own user document during signup
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow admins to create their own admin document during signup
    match /admins/{adminId} {
      allow create: if request.auth != null && request.auth.uid == adminId;
      allow read, update: if request.auth != null && request.auth.uid == adminId;
      // Allow other admins to read admin documents
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Allow authenticated users to create their profile documents
    match /doctors/{docId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null;
    }
    
    match /ashaWorkers/{docId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null;
    }
    
    match /patients/{docId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null;
    }
    
    // Allow authenticated users to read/write other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
